{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "importHelpers": true,
        "jsx": "react",
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": "./",
        "strict": true,
        "paths": {
            "@/*": ["src/*"],
            "@@/*": ["src/.magi/*"]
        },
        "allowSyntheticDefaultImports": true
    },
    "include": ["mock/**/*", "src/**/*", "config/**/*", ".magirc.ts", "typings.d.ts"]
}
